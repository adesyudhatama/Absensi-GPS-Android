<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nad.ayt.absensigps.ProfileActivity"
    android:background="@color/colorBackground"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo"
        android:paddingTop="100px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50px"
        android:text="ABSENSI GPS UNSRI"
        android:textSize="75px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGetCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:textColor="@color/colorBlack"
        android:text="Cek Lokasi"
        android:onClick="lokasi"
        />
    <Button
        android:id="@+id/btnTrackLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:bottomRightRadius="50dp"
        android:bottomLeftRadius="50dp"
        android:topLeftRadius="50dp"
        android:topRightRadius="50dp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:textColor="@color/colorBlack"
        android:text="Update Lokasi"
        android:onClick="lokasi"
        />

    <TextView
        android:id="@+id/txtKet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="50px" />

    <TextView
        android:id="@+id/txtCoordinates"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/cek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/round"
        android:layout_marginTop="50px"
        android:textColor="@color/colorBlack"
        android:onClick="cekJadwal"
        android:text="Cek Jadwal Kuliah" />

</LinearLayout>

